@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<dynamic>
@{
	Layout = "Layout.cshtml";
	string redirectUrl = Model.isDebug ? "http://localhost/oauth/login" : "http://hellojkw.com/oauth/login";
	string loginUrl = "https://accounts.google.com/o/oauth2/auth?client_id=381224079549-pmkekmoko01ss0uqle22q0btsam7nluh.apps.googleusercontent.com&redirect_uri=" + redirectUrl + "&scope=https://www.googleapis.com/auth/plus.login&response_type=code";
	redirectUrl = Model.isDebug ? "http://localhost/oauth/register" : "http://hellojkw.com/oauth/register";
	string registerUrl = "https://accounts.google.com/o/oauth2/auth?client_id=381224079549-pmkekmoko01ss0uqle22q0btsam7nluh.apps.googleusercontent.com&redirect_uri=" + redirectUrl + "&scope=https://www.googleapis.com/auth/plus.login&response_type=code";
}

<h2>회원정보 수정</h2>

<div class="form-horizontal col-md-6">
	@*<div class="form-group">
		<label for="input-id" class="col-sm-2 control-label">ID</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="input-id" value="@Model.user.Id" disabled="disabled" />
		</div>
	</div>*@
	<div class="form-group">
		<label for="input-name" class="col-sm-2 control-label">이름</label>
		<div class="col-sm-10">
			<input type="text" class="form-control" id="input-name" value="@Model.user.Name"/>
		</div>
	</div>
	<div class="form-group">
		<label for="input-img" class="col-sm-2 control-label">사진</label>
		<div class="col-sm-10">
			<img src="@Model.user.ImageUrl" class="img-circle" id="user-image" />
			<a class="btn btn-danger"href="https://plus.google.com/@Model.user.Id/about" target="_blank">google+로 이동</a>
		</div>
	</div>
	<div class="form-group">
		<label for="input-name" class="col-sm-2 control-label">가입일</label>
		<div class="col-sm-10">
			<input type="datetime" class="form-control" id="input-regdate" value="@Model.user.RegDate" disabled="disabled"/>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-10">
			<button type="button" id="user-save" class="btn btn-success">저장</button>
		</div>
	</div>
</div>

@section Css
{
	<style type="text/css">
		img#user-image {
			width: 150px;
		}
	</style>
}

@section Javascript
{
	<script type="text/javascript">
		$(document).ready(function () {
			$('img#user-image').click(function () {
				showAlert('사진은 Google+를 통해 수정해주세요');
			});

			$('#user-save').click(function () {
				$.ajax({
					type: 'POST',
					url: '/user-setting',
					data: JSON.stringify(
					{
						name: $('#input-name').val()
						, test: '하하test'
					}),
					contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
					datatype: 'json',
					success: function (data) {
						if (data == 'success')
						{
							showAlert('수정되었습니다');
						}
						else
						{
							showAlert('오류!');
						}
					}
				});
			});
		});
	</script>
}

