<!DOCTYPE html>
<html lang="kr">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="jkw">
    <meta name="description" content="">
    <title>Jkw Blog</title>
    <!-- Bootstrap Core CSS -->
    <link href="/Static/Agency/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/Static/Agency/css/agency.css" rel="stylesheet">
    <link href="/Static/css/jkwBlogHome.css" rel="stylesheet">
    <!-- Custom Fonts -->
    <link href="/Static/Agency/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top navbar-shrink">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand page-scroll" href="/#page-top">Hello Jkw!</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden"> <a href="/#page-top"></a> </li>
                    <li> <a class="page-scroll" href="/#projects">Projects</a> </li>
                    <li class="active"> <a class="page-scroll" href="/blog">Blog</a> </li>
                    <li> <a class="page-scroll" href="/#games">Games</a> </li>
                    <li> <a class="page-scroll" href="/#about">About</a> </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
	<div class="container" id="top-post">
		<div class="col-md-9" id="posts">
			@foreach (var post in @Model.postList)
			{
				<div class="row">
					<article class="post">
						<h2 class="post-title"><a href="/blog/post/@post.Name">@post.Title</a></h2>
						<span class="post-category label label-info"><a href="/blog/category/@post.Category">@post.Category</a></span>
						@foreach (var tag in @post.Tags)
						{
							<span class="post-tag label label-success"><a href="/blog/tag/@tag">@tag</a></span>
						}
						<time class="post-datetime" datetime="@string.Format("{0:yyyy-MM-dd}", @post.Date)">@string.Format("{0:yyyy.MM.dd}", @post.Date)</time>
						<div class="post-content">@Html.Raw(@post.Html)</div>
					</article>
				</div>
				<hr />
			}
		</div>
		<div class="col-md-3">
			<div id="category-list">
				@foreach (var category in @Model.categoryList)
				{
					<a class="btn btn-info" href="/blog/category/@category.CategoryName">@category.CategoryName <span class="badge">@category.Count</span></a>
				}
			</div>
			<div id="tag-list">
				@foreach (var tag in @Model.tagList)
				{
					<a class="btn btn-success btn-xs" href="/blog/tag/@tag">@tag</a>
				}
			</div>
		</div>
	</div>

	<hr class="post-main"/>

	<footer>
		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<span class="copyright">Copyright &copy; Hello Jkw 2015</span>
				</div>
			</div>
		</div>
	</footer>
	<!-- jQuery -->
	<script src="/Static/Agency/js/jquery.js"></script>
	<!-- Bootstrap Core JavaScript -->
	<script src="/Static/Agency/js/bootstrap.min.js"></script>
	<!-- Plugin JavaScript -->
	<script src="http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
</body>
</html>