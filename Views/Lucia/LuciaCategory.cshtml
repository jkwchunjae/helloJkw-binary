@{
	string rootPath = @Model.rootPath;
	string device = @Model.device;
	string category = @Model.category;
}

<!DOCTYPE html>
<html lang="kr">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="루치아 핸드메이드 카드" />
	<meta name="author" content="황경욱 루치아" />
	<title>루치아 핸드메이드 카드</title>

	<link href="/Static/css/bootstrap.min.css" rel="stylesheet" />
	<link href="/Static/css/luciaDefault.css" rel="stylesheet" />
	<link href="/Static/css/luciaCategory.css" rel="stylesheet" />
	@*<link href="/Static/css/slide.css" rel="stylesheet" />*@
</head>

<body>
	<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<h1> <a class="navbar-brand" href="http://luciahandmadecard.com">Lucia Handmade Card</a> </h1>
			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					@foreach (var menu in @Model.mainMenu)
					{
						string active = null;
						if (@menu == @category)
						{ active = "active"; }
						<li class="@active"><a href="/lucia/@device/category/@menu">@menu</a></li>
					}
				</ul>
			</div>
		</div>
	</nav>

	<div class="container">
		<div class="row">
			<div class="col-md-12 col-xs-12">
				<div class="row">
					@foreach (var product in @Model.productList)
					{
					<div class="col-sm-4 col-lg-4 col-md-4">
						<div class="thumbnail">
							<a href="/lucia/@device/product/@category/@product.Name"><img src="/@rootPath/@product.MainImage" alt=""></a>
							<div class="caption">
								<h4 class="pull-right">@product.Price 원</h4>
								<h4>
									<a href="/lucia/@device/product/@category/@product.Name">@product.Name</a>
								</h4>
								@*<p>See more snippets like this online store item at <a target="_blank" href="http://www.bootsnipp.com">Bootsnipp - http://bootsnipp.com</a>.</p>*@
								<p>
								@foreach (string content in @product.MainContent)
								{
									@content<br />
								}
								</p>
							</div>
							<div class="ratings">
								<p class="pull-right">15 reviews</p>
								<p>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									@*<span class="glyphicon glyphicon-star"></span>*@
								</p>
							</div>
						</div>
					</div>
					}	
				</div>
			</div>
		</div>
	</div>

	<div class="container">
		<hr />
		<footer>
			<div class="row">
				<div class="col-lg-12">
					<p>Copyright &copy; Lucia Handmade Card 2015</p>
				</div>
			</div>
		</footer>
	</div>
	<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
	<script type="text/javascript" src="/Static/js/bootstrap.min.js"></script>
</body>
</html>