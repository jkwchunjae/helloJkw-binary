		<div class="row">

			<div class="col-md-3">
				<p class="lead"></p>
				<h2 class="lead"><a href="/lucia/category/@category">@category</a></h2>
				<div class="list-group">
					@foreach (var product in @Model.productList)
					{
						string active = null;
						if (@product.Name == @productInfo.Name)
						{ active = "active"; }
						<a href="/lucia/@device/product/@category/@product.Name" class="list-group-item @active">@product.Name</a>
					}
				</div>
			</div>

			<div class="col-md-9">

				<div class="thumbnail">
					<img class="img-responsive" src="/@rootPath/@productInfo.MainImage" alt="@productInfo.Name 의 대표 사진">
					<div class="caption-full">
						<h4 class="pull-right">@productInfo.Price 원</h4>
						<h4>
							<a href="#">@productInfo.Name</a>
						</h4>
