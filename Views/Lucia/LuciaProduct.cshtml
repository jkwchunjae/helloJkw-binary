			</div>
			<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
				<ul class="nav navbar-nav">
					@foreach (var menu in @Model.mainMenu)
					{
						string active = null;
						if (@menu == @category)
						{ active = "active"; }
						<li class="@active"><a href="/lucia/@device/category/@menu">@menu</a></li>
					}
				</ul>
			</div>
		</div>
	</nav>

